{
  "name": "portal",
  "version": "0.0.1",
  "description": "The Multiflexmeter Management Portal",
  "main": "dist/entry.js",
  "scripts": {
    "build": "tsc",
    "start:dev": "ts-node-dev --respawn src/entry.ts",
    "start:prod": "pm2-runtime start pm2.json",
    "test": "nyc mocha -r ts-node/register tests/**/*.test.ts",

    "build:image": "docker build . -t pollex/portal:local --build-arg UID=$(id -u) --build-arg GID=$(id -g)",
    "docker": "docker run --rm -it -v $(pwd):/srv/app pollex/portal:local",
    "docker:start:dev": "docker run --rm -it -p 9229:9229 -p 3000:3000 -v $(pwd):/srv/app pollex/portal:local yarn start:dev",
    "docker:test": "docker run --rm -it -p 9230:9229 -v $(pwd):/srv/app pollex/portal:local yarn test"
  },
  "repository": "git@github.com:Multiflexmeter/Portal.git",
  "author": "Tim van Osch <timvosch@pollex.nl>",
  "license": "MIT",
  "private": false,
  "dependencies": {
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.7",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "chai": "^4.2.0",
    "eslint": "^6.4.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "ts-node": "^8.4.1",
    "ts-node-dev": "^1.0.0-pre.43",
    "typescript": "^3.6.3"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.test.ts"
    ],
    "check-coverage": true,
    "reporter": [
      "text-summary",
      "lcov"
    ]
  }
}
